generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BirthdayCard {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime?
  isPublic       Boolean  @default(true)
  toName         String
  fromName       String
  message        String
  presentEnabled Boolean  @default(false)
  presentText    String?
  theme          Json?
}

model ValentineCard {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime?
  isPublic       Boolean  @default(true)
  toName         String
  fromName       String
  message        String
  presentEnabled Boolean  @default(false)
  presentText    String?
  theme          Json?
}
