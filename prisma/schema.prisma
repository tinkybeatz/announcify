generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BirthdayCard {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime?
  isPublic       Boolean  @default(true)
  toName         String
  fromName       String
  message        String
  gift           Boolean  @default(false)
  giftDescription String?
  customCardSignature String?
  customGiftSignature String?
  theme          Json?
  createdBy      String?
  creator        User?    @relation("BirthdayCardsCreated", fields: [createdBy], references: [id], onDelete: SetNull)
}

model ValentineCard {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime?
  isPublic       Boolean  @default(true)
  toName         String
  fromName       String
  message        String
  gift           Boolean  @default(false)
  giftDescription String?
  theme          Json?
  createdBy      String?
  creator        User?    @relation("ValentineCardsCreated", fields: [createdBy], references: [id], onDelete: SetNull)
}

model User {
  id             String   @id @default(cuid())
  name           String?
  firstName      String?
  lastName       String?
  email          String   @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  accounts       Account[]
  sessions       Session[]
  birthdayCardsCreated BirthdayCard[] @relation("BirthdayCardsCreated")
  valentineCardsCreated ValentineCard[] @relation("ValentineCardsCreated")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
